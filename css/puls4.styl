gris_oscuro = #444
azul = #22BCE0
naranja = #DD4f24
gris_texto = #7A7A7A

a
	color naranja

body
	background #E8E8E8
	color gris_oscuro
	font-family: Arial
	font-size: 16px
footer
	background naranja
	color rgba(white, 0.5)
	text-align center
	position absolute
	width 100%
	bottom 0
	h3
		font-size 14px
		font-weight normal
		strong
			display block
		.mejor
			&:before
			&:after
				content "-"
header
	background: gris_oscuro
	color white
	overflow hidden
	padding: 0.5em
	position relative
	margin 0
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	z-index 1

	.logo
		border-right 1px solid azul
		width: 60px
		float left

		img 
			width 52px

	.titular
		margin 0px 60px 0 70px
		.filtro
			color azul
			font-weight bold
			font-style italic
			text-decoration none
			font-size 14px
		.publicar
			background naranja
			color white
			margin -5px 1em 0 0
			padding 0.2em 0.5em
			text-decoration none
			text-shadow 1px 1px 0px black
			float right
			font-style italic
			
		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0

	.usuario
		position absolute
		right 10px
		top 10px
		.avatar
			margin 0 1.1em 0 0
			position relative
			z-index 2
			img
				width 50px
				height 50px
				border-radius 50%
		.flechita
			display block
			background naranja
			color white
			text-align right
			position absolute
			width 50%
			top 0
			right 0
			top 15px
nav
	background azul
	border-left 15px solid white
	position relative
	
	&:before
				content ""
				border-bottom 20px solid transparent
				border-left 7px solid white
				border-top 20px solid transparent
				position absolute
				top 0
				left 0
				z-index 3
	.menu
		height 40px
		line-height 40px
		margin 0
		overflow-x auto
		white-space nowrap
		padding 0
		li
			display inline-block
			a
				color white
				display block
				margin 0 0.5em
				text-decoration none
				padding 0 0.2em
				
.posts
	padding 0.5em
	
	.post
		background white
		border-radius 0 0 0.5em 0.5em
		color gris_texto
		box-shadow 2px 2px 10px rgba(black, 0.5)
		margin-bottom 1em
		.acciones
			border-top 3px solid azul
			padding 0.5em
			overflow hidden
			.datos
				float right
				.comentarios
					background gris_oscuro
					border-radius 3px
					color white
					margin 0 1em 0 0
					padding 2px 5px
					text-decoration 
			.votos
				float left
				.down
				.up
					text-decoration none
				.down
					color red
				.up
					color green
		.descripcion
			color gris_texto
			.detalles
				height 160px
				margin-left 130px
				.autor
					margin 0.5em 0 2em 0
				.fecha
					float right
					margin 0 1em 0 0
				.tag
					background azul
					color white
					padding 0.2em 0.5em
					text-decoration none
					border-radius 0.5em
					box-shadow 2px 2px 2px rgba(gris_texto)
				.titulo
					font-size 18px
					font-style italic
					color gris_oscuro
					margin 0
					padding 0.5em 0.5em 0 0 
			.imagen
				float left
				padding 0
				margin 0
				img
					vertical-align top
					height 160px
					width 120px
					
					
				
.left
	float left
.right
	float right


